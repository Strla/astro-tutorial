---
import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";
import Greeting from "../components/Greetings";

const pageTitle = "Home Page";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="flex flex-col items-center py-12">
    <div class="max-w-2xl text-center">
      <h2
        class="text-2xl md:text-3xl font-bold mb-6 text-gray-900 dark:text-white"
      >
        Welcome to my Astro Blog
      </h2>

      <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
        My awesome blog subtitle
      </p>

      <Greeting client:load messages={["Hi", "Hello", "Howdy", "Hey there"]} />

      <div class="mt-12 flex gap-4 justify-center">
        <a
          href="/blog"
          class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
        >
          Read Blog
        </a>
        <a
          href="/about"
          class="px-6 py-3 bg-gray-200 dark:bg-gray-800 text-gray-800 dark:text-gray-200 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-700 transition-colors"
        >
          About Me
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
