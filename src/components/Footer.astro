---
import "../styles/global.css";
import Social from "./Social.astro";
---

<footer class="mt-8 py-6 border-t border-gray-200 dark:border-gray-800">
  <div class="flex flex-col items-center md:flex-row md:justify-between">
    <div class="mb-4 md:mb-0">
      <p class="text-sm text-gray-600 dark:text-gray-400">
        &copy; {new Date().getFullYear()} My Astro Site. All rights reserved.
      </p>
    </div>
    <div class="flex space-x-4">
      <Social platform="github" username="Strla" />
      <Social platform="twitter" username="astrodotbuild" />
      <Social platform="linkedin" username="astro" />
    </div>
  </div>
</footer>
